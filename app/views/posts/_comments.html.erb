<% if @post.comments.any? %>
  <div class="row">
    <div class="col-xs-12">
      <h3 class="comment-title">Comments:</h3>
    </div>
  </div>
  <% @comments.each do |comment| %>
    <div class="row">
      <div class="col-xs-12 comment-show">
        <hr>
        <% if comment.created_at %>
          <p>
            <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
            <% if can?(:destroy, Comment) %>
              <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, post_comment_path(comment.post, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger', title: 'Delete Comment' %>
            <% end %>
          </p>
        <% end %>
        <p><%= comment.body %></p>
      </div>
    </div>
  <% end %>
<% end %>